{
    "compilerOptions":  {
                            "outDir":  "lib",
                            "target":  "es2019",
                            "module":  "commonjs",
                            "lib":  [
                                        "esnext",
                                        "dom"
                                    ],
                            "declaration":  true,
                            "strict":  true,
                            "alwaysStrict":  true,
                            "allowSyntheticDefaultImports":  true,
                            "skipLibCheck":  true
                        },
    "include":  [
                    "src/**/*.ts"
                ],
    "exclude":  [
                    "node_modules"
                ]
}
