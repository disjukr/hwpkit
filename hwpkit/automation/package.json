{
  "name": "hwp-automation",
  "version": "1.0.0",
  "description": "Hancom HWP automation utilities",
  "scripts": {
    "test": "vitest run",
    "build:dotnet": "powershell -NoProfile -Command \"& $Env:ProgramFiles\\dotnet\\dotnet.exe build dotnet\\HwpDotNetHost\\HwpDotNetHost.csproj -c Release\"",
    "postinstall": "npm run build:dotnet",
    "test:smoke": "tsx src/smoke.test.ts",
    "test:action:insert-text": "tsx src/action-tests/insert-text.test.ts",
    "gen": "node tools/gen-all.cjs",
    "gen:methods": "node tools/gen-methods.cjs",
    "gen:actions": "node tools/gen-actions.cjs",
    "gen:psets": "node tools/gen-psets.cjs",
    "gen:method-sigs": "node tools/gen-method-sigs.cjs",
    "build": "tsc -p tsconfig.json --noEmit",
    "test:watch": "vitest",
    "test:e2e": "vitest run --reporter=verbose"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "cfb": "^1.2.2",
    "node-api-dotnet": "^0.9.19"
  }
}
